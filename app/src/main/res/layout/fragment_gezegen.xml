        android:textColor="#CFEAFF"
        app:layout_constraintEnd_toEndOf="@+id/buttonMercur"
        app:layout_constraintStart_toStartOf="@+id/buttonMercur"
        app:layout_constraintTop_toBottomOf="@+id/buttonMercur" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VENÜS"
