        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#CFEAFF"
        app:layout_constraintEnd_toEndOf="@+id/buttonMoon"
        app:layout_constraintStart_toStartOf="@+id/buttonMoon"
        app:layout_constraintTop_toBottomOf="@+id/buttonMoon" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
