    <ImageButton
        android:id="@+id/buttonUranus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#B3C9EDA1"
        android:src="@drawable/ic_uranus"
        app:layout_constraintBottom_toTopOf="@+id/textView_gezegen"
        app:layout_constraintEnd_toStartOf="@+id/buttonNeptun"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonSaturn"
        app:layout_constraintTop_toBottomOf="@+id/buttonMercur" />

    <ImageButton
        android:id="@+id/buttonVenus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#B3C9EDA1"
        android:src="@drawable/ic_venus"
        app:layout_constraintBottom_toTopOf="@+id/buttonNeptun"
        app:layout_constraintEnd_toStartOf="@+id/buttonMars"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonMercur"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/buttonPluton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#B3C9EDA1"
        android:src="@drawable/ic_pluto"
        app:layout_constraintBottom_toTopOf="@+id/textView_gezegen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonNeptun"
        app:layout_constraintTop_toBottomOf="@+id/buttonMars" />

    <TextView
        android:id="@+id/textView_gezegen"
        android:layout_width="344dp"
        android:layout_height="317dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="31dp"
        android:gravity="center"
        android:hint="Seçiniz."
        android:scrollbars="vertical"
        android:textColor="#DAF6DC"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

