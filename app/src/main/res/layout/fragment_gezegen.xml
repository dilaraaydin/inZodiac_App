        app:layout_constraintTop_toBottomOf="@+id/buttonNeptun" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLÜTON"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#CFEAFF"
        app:layout_constraintEnd_toEndOf="@+id/buttonPluton"
        app:layout_constraintStart_toStartOf="@+id/buttonPluton"
        app:layout_constraintTop_toBottomOf="@+id/buttonPluton" />

    <ImageButton
        android:id="@+id/buttonJupiter"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#B3C9EDA1"
        android:src="@drawable/ic_jupiter"
        app:layout_constraintBottom_toTopOf="@+id/textView_gezegen"
        app:layout_constraintEnd_toStartOf="@+id/buttonSaturn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSun" />

    <ImageButton
        android:id="@+id/buttonMars"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#B3C9EDA1"
        android:src="@drawable/ic_mars"
        app:layout_constraintBottom_toTopOf="@+id/buttonPluton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonVenus"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/buttonMercur"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#B3C9EDA1"
        android:src="@drawable/ic_mercury"
        app:layout_constraintBottom_toTopOf="@+id/buttonUranus"
        app:layout_constraintEnd_toStartOf="@+id/buttonVenus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonMoon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/buttonMoon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#B3C9EDA1"
