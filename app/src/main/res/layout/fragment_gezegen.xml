        app:layout_constraintTop_toBottomOf="@+id/buttonMars" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JÜPİTER"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#CFEAFF"
        app:layout_constraintEnd_toEndOf="@+id/buttonJupiter"
        app:layout_constraintStart_toStartOf="@+id/buttonJupiter"
        app:layout_constraintTop_toBottomOf="@+id/buttonJupiter" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SATÜRN"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#CFEAFF"
        app:layout_constraintEnd_toEndOf="@+id/buttonSaturn"
        app:layout_constraintStart_toStartOf="@+id/buttonSaturn"
        app:layout_constraintTop_toBottomOf="@+id/buttonSaturn" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="URANÜS"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#CFEAFF"
        app:layout_constraintEnd_toEndOf="@+id/buttonUranus"
