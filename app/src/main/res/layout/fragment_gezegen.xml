        android:layout_height="wrap_content"
        android:text="GÜNEŞ"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#CFEAFF"
        app:layout_constraintEnd_toEndOf="@+id/buttonSun"
